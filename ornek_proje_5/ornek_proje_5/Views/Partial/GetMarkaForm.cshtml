@using ornek_proje_5.Controllers
@using EntityFrameworkLibrary
@model PageItem

@{
    Layout = null;
}

<div id="mdlForm" class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        @if (Model.lstMarkalarIslem.FirstOrDefault().markaID > 0)
        {
            <h4 class="blue bigger">Marka düzenle</h4>
        }
        else
        {
            <h4 class="blue bigger">Marka ekle</h4>
        }
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-md-6 col-sm-12">
                <label class="control-label">Marka Resim </label>
                <img src="@Model.lstMarkalarIslem.FirstOrDefault().markaResimUrl" style="max-width:150px !important;" />
                <input type="hidden" name="hdnMarkaResim" value="@Model.lstMarkalarIslem.FirstOrDefault().markaResimUrl" />
                <input type="file" class="form-control" name="fileMarkaResim" />
            </div>
            <div class="col-md-6 col-sm-12">
                <label class="control-label">Marka Başlık </label>
                <input type="text" class="form-control" name="txtMarkaBaslik" value="@Model.lstMarkalarIslem.FirstOrDefault().markaBaslik" data-required='true' data-group_name='ModalForm' data-message_type='formmessage' />
            </div>
            <div class="col-md-12 col-sm-12">
                <label class="control-label">Açıklama </label>
                <textarea class="form-control" rows="7" name="txtMarkaAciklama" data-required='true' data-group_name='ModalForm' data-message_type='formmessage'>@Model.lstMarkalarIslem.FirstOrDefault().markaAciklama</textarea>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-sm" data-dismiss="modal">
            <i class="ace-icon fa fa-times"></i>
            Kapat
        </button>
        <a class="btn btn-success" data-mode="MarkaIslem" data-data1="@Model.lstMarkalarIslem.FirstOrDefault().markaID" data-required='true' data-moving_scroll_bar='1' data-group_name='ModalForm'>Kaydet</a>
    </div>
</div>


